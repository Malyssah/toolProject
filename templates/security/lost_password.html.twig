{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

    <div class="container vh-100">

        <div class="page-content row align-items-center">
            <div class="card">
                <div class="card-body ">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <h3 class="card-title"> Mot de passe oublié ?</h3>


                    <form action="{{ path('reset-password') }}" method="post">

                        <div class="form-group">
                            <label for="email">Adresse Email*</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="@" required>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-lg btnForm btn-lg btn-block" type="submit">Envoyer</button>
                        </div>
                        <br>
                        <div class="form-group">
                            <a href="{{ path('app_login') }}">annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}