{% extends 'base.html.twig' %}

{% block title %}Connexion - toolProject{% endblock %}

{% block body %}

    <section class="d-flex justify-content-center">
        <div class="card col-5 shadow p-3 mb-5 rounded">
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">Identifiants invalides</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déjà connecté  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                                déconnecter</a>
                        </div>
                    {% endif %}
                    {#formulaire de connexion#}
                    <h3 class="card-title titleForm" style="text-align: center;">Connexion</h3>
                    <br>
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-lg btnForm btn-lg btn-block" type="submit">Se connecter</button>
                    </div>
                    <br>
                    <div class="form-group">
                        <a href="{{ path('add-User') }}">Pas de compte ? En créer un! </a>
                        <a href="{{ path('reset-password') }}">Mot de passe oublié?</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
