{% extends 'base.html.twig' %}

{% block title %}Créer un groupe{% endblock %}

{% block body %}

    <main class="page-content">
        <a class="ml-5" href="{{ path('list-Alliances') }}"><i class="fas fa-angle-left"></i> retour à la liste des
            groupes</a>
        <hr>
        <div class="container-fluid d-flex justify-content-center">
            <div class="card col-6 shadow p-3 mt-3 rounded d-flex justify-content-center">
                <div class="card-body">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <h3 class="card-title titleForm" style="text-align: center;">Créer un groupe:</h3>
                    <br>

                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_row(form.serveur) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.cadran) }}
                    </div>

                    <div class="text-center">
                        {{ form_row(form.Enregistrer, {'attr': {'class':'btn btn-lg btnForm btn-lg btn-block'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}