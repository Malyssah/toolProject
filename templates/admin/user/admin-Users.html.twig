{% extends 'base.html.twig' %}

{% block title %}Admin - Gestion des utilisateurs{% endblock %}

{% block body %}



    <section class="container ">
        <h1>Admin - Gestion des utilisateurs</h1>
        <table class="table table-striped">

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {# ajout utilisateur#}
            <div class="row justify-content-end">
                <a href="{{ path('add-User') }}" class="btn btnForm btn-sm"><i class="fas fa-plus"></i> Ajouter un
                    utilisateur</a>
            </div>
            <br>
            <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Pseudos</th>
                <th>Emails</th>
                <th>Serveurs</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.serveur }}</td>
                    <td>
                        <a href="{{ path('edit-User',{ id:user.id }) }}" class="btn btn-success">
                            <i class="fas fa-pen"></i> Modifier</a>
                        <a href="{{ path('admin-delete-User',{ id:user.id }) }}" class=" btn btn-danger">
                            <i class="fas fa-trash"> Supprimer</i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
