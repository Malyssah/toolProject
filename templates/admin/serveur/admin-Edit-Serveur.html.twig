{% extends 'base.html.twig' %}

{% block title %}Admin - Modifier serveur{% endblock %}

{% block body %}

    <main class="page-content">
        <div class="container-fluid  d-flex justify-content-center">
            {# retour liste users#}
            <a class="ml-5" href="{{ path('admin-List-Serveurs') }}"><i class="fas fa-angle-left"></i> retour Ã  la liste
                des serveurs</a>

            <div class="container-fluid d-flex justify-content-center">
                <div class="card col-6 shadow p-3 mt-3 rounded d-flex justify-content-center">
                    <div class="card-body">

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {# retour liste users#}
                        <h3 class="card-title titleForm" style="text-align: center;">Modifier le serveur ?</h3>
                        <br>

                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>

                        <div class="text-center">
                            {{ form_row(form.Modifier, {'attr': {'class':'btn btn-lg btnForm btn-lg btn-block'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}